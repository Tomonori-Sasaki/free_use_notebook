<div class="main">
  <div class="centering">
    <div class="panel panel-danger" style="width: 100%; margin: auto; border-color: #4B0082;">
      <div class="panel-heading" style="text-align: center; background-color: #4B0082; color: white;"><%= @job_hunting.name %></div>
      <!-- Table -->

        <table class="table table-striped table-bordered table-hover">
          <tbody>
            <tr>
              <th>Rank</th><td style="text-align: left;"><%= @job_hunting.rank %></td>
            </tr>
            <tr>
              <th>Type</th><td style="text-align: left;"><%= @job_hunting.type %></td>
            </tr>
            <tr>
              <th style="width: 80px;">Content</th><td style="text-align: left;"><%= @job_hunting.content.gsub(/\r\n|\r|\n/, "<br />").html_safe %></td>
            </tr>
          </tbody>
        </table>

    </div><!--/panel-->
    <br>
    <div style="text-align: center;">
      <%= link_to 'Edit', edit_job_hunting_path(@job_hunting), class: "btn btn-default" %>
      <%= link_to 'Back', job_huntings_path, class: "btn btn-default" %>
    </div>
  </div>
</div>
