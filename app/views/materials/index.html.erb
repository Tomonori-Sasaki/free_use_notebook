<div class="main">
  <div class="centering">
    <%= form_tag materials_path, :method => 'get' do %>
      <p>
        <%= text_field_tag :search, params[:search] %>
        <%= submit_tag "Search", :name => nil %>
      </p>
    <% end %>
    <div class="panel panel-primary" style="width: 100%; margin: auto;">
      <div class="panel-heading" style="text-align: center;">Material List</div>
      <!-- Table -->
      <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th style="text-align: center;">Material</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @materials.each do |material| %>
              <tr>
                <td><%= material.name %></td>
                <td><%= link_to 'Show', material, class: "btn btn-primary btn-xs" %></td>
                <td><%= link_to 'Edit', edit_material_path(material), class: "btn btn-success btn-xs" %></td>
                <td><%= link_to 'Destroy', material, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div><!--/panel-->
    <br>
    <div style="text-align: center;">
      <%= link_to 'New Material', new_material_path, class: "btn btn-default" %>
    </div>
  </div>
</div>
