<div class="main">
  <div class="centering">
    <div class="panel panel-danger" style="width: 100%; margin: auto; border-color: #000000;">
      <div class="panel-heading" style="text-align: center; background-color: #000000; color: white;"><%= @programming.name %></div>
      <!-- Table -->

        <table class="table table-striped table-bordered table-hover">
          <tbody>
            <tr>
              <th>Rank</th><td style="text-align: left;"><%= @programming.rank %></td>
            </tr>
            <tr>
              <th style="width: 80px;">Content</th><td style="text-align: left;"><%= @programming.content.gsub(/\r\n|\r|\n/, "<br />").html_safe %></td>
            </tr>
          </tbody>
        </table>

    </div><!--/panel-->
    <br>
    <div style="text-align: center;">
      <%= link_to 'Edit', edit_programming_path(@programming), class: "btn btn-default" %>
      <%= link_to 'Back', programmings_path, class: "btn btn-default" %>
    </div>
  </div>
</div>
