<div class="main">
  <div class="centering">
    <%= form_tag to_dos_path, :method => 'get' do %>
      <p>
        <%= text_field_tag :search, params[:search] %>
        <%= submit_tag "Search", :name => nil %>
      </p>
    <% end %>
    <div class="panel panel-primary" style="width: 100%; margin: auto;">
      <div class="panel-heading" style="text-align: center;">To Do List</div>
      <!-- Table -->
      <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th style="text-align: center;">To Do</th>
              <th style="text-align: center;">Deadline</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @to_dos.each do |to_do| %>
              <tr>
                <td><%= to_do.name %></td>
                <td><%= to_do.deadline %></td>
                <td><%= link_to 'Show', to_do, class: "btn btn-primary btn-xs" %></td>
                <td><%= link_to 'Edit', edit_to_do_path(to_do), class: "btn btn-success btn-xs" %></td>
                <td><%= link_to 'Destroy', to_do, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div><!--/panel-->
    <br>
    <div style="text-align: center;">
      <%= link_to 'New To Do', new_to_do_path, class: "btn btn-default" %>
    </div>
  </div>
</div>
