<div class="main">
  <div class="centering">
    <div class="panel panel-danger" style="width: 100%; margin: auto; border-color: #000080;">
      <div class="panel-heading" style="text-align: center; background-color: #000080; color: white;"><%= @to_do.name %></div>
      <!-- Table -->

        <table class="table table-striped table-bordered table-hover">
          <tbody>
            <tr>
              <th style="width: 80px;">Content</th><td style="text-align: left;"><%= @to_do.content.gsub(/\r\n|\r|\n/, "<br />").html_safe %></td>
            </tr>
            <tr>
              <th>Deadline</th><td style="text-align: left;"><%= @to_do.deadline %></td>
            </tr>
          </tbody>
        </table>

    </div><!--/panel-->
    <br>
    <div style="text-align: center;">
      <%= link_to 'Edit', edit_to_do_path(@to_do), class: "btn btn-default" %>
      <%= link_to 'Back', to_dos_path, class: "btn btn-default" %>
    </div>
  </div>
</div>
