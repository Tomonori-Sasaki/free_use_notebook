<div class="main">
  <div class="centering">
    <%= form_tag youtubes_path, :method => 'get' do %>
      <p>
        <%= text_field_tag :search, params[:search] %>
        <%= submit_tag "Search", :name => nil %>
      </p>
    <% end %>
    <div class="panel panel-danger" style="width: 100%; margin: auto; border-color: #FF0000;">
      <div class="panel-heading" style="text-align: center; background-color: #FF0000; color: white;">YouTube List</div>
      <!-- Table -->
      <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th style="text-align: center;">Rank</th>
              <th style="text-align: center;">Name</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @youtubes.each do |youtube| %>
              <tr>
                <td><%= youtube.rank %></td>
                <td><%= youtube.name %></td>
                <td><%= link_to 'Show', youtube, class: "btn btn-primary btn-xs" %></td>
                <td><%= link_to 'Edit', edit_youtube_path(youtube), class: "btn btn-success btn-xs" %></td>
                <td><%= link_to 'Destroy', youtube, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div><!--/panel-->
    <br>
    <div style="text-align: center;">
      <%= link_to 'New Youtube', new_youtube_path, class: "btn btn-default" %>
    </div>
  </div>
</div>
